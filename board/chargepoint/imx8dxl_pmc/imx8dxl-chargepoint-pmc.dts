/dts-v1/;

#include "fsl-imx8dxl.dtsi"

#if !defined(CONFIG_FASTBOOT_UUU_SUPPORT)
#include "chargepoint-pubkey.dtsi"
#include "prod-pubkey-pmc.dtsi"
#endif

/ {
	model = "NXP i.MX8DXL Chargepoint PMC Board";
	compatible = "fsl,imx8dxl-pmc", "fsl,imx8dxl";

	chosen {
		bootargs = "console=ttyLP0,115200 earlycon";
		stdout-path = &lpuart0;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		/* for RS485 and CAN transceiver */
		reg_ser_pwr: regulator-serial-power {
			compatible = "regulator-fixed";
			regulator-name = "ser_pwr_en";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			gpio = <&gpio3 19 GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-always-on;
		};

	};
};


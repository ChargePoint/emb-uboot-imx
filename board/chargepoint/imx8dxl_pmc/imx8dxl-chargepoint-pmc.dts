&i2c1 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c1>;
	status = "okay";

	/* power module interface */
	pca9539_ioexp: ioexp@77{
		compatible = "nxp,pca9539";
		gpio-controller;
		#gpio-cells = <2>;
		reg = <0x77>;
	};

	temp_sensor: tc74a5@4d {
		compatible = "tc74a5";
		reg = <0x4d>;
	};

	eeprom: eeprom@50 {
		compatible = "microchip,24lc16";
		reg = <0x50>;
		pagesize = <16>;
	};

	/* humidity sensor */
	hpp845e031r4@40 {
		compatible = "microchip,24lc16";
		reg = <0x40>;
	};

	/* tilt sensor */
	lis3dh_acc@31 { /* Accelerometer */
		compatible = "st,lis3dh";
		reg = <0x31>;
	};

	ads7828@48 { /* ADC */
		compatible = "ti,ads7828";
		reg = <0x48>;
		st,drdy-int-pin = <1>;
	};

	rtc@51 {/* RTC */
		compatible = "nxp,pcf85363";
		reg = <0x51>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_rtc>;
		interrupt-parent = <&gpio3>;
		interrupts = <8 IRQ_TYPE_LEVEL_LOW>;
		interrupt-names = "rtc_irqn";
	};

};

&i2c2 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2>;
	status = "okay";

	/* power module interface */
	pca9539_extctrl: extctrl@77 {
		compatible = "nxp,pca9539";
		gpio-controller;
		#gpio-cells = <2>;
		reg = <0x77>;
	};
};

&lpuart0 { /* console */
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_lpuart0>;
	status = "okay";
};

&lpuart2 { /* RS485 */
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_lpuart2>;
	rts-gpios = <&gpio4 21 GPIO_ACTIVE_HIGH>; /* RS485_DE */
	/* RS485_REn is set to low in uboot i.e we are always receive ready */
	linux,rs485-enabled-at-boot-time;
	rs485-rx-during-tx;
	status = "okay";
};

&usbotg1 {
	srp-disable;
	hnp-disable;
	adp-disable;
	power-active-high;
	disable-over-current;
	status = "okay";
};

&usdhc1 {
	pinctrl-names = "default", "state_100mhz", "state_200mhz";
	pinctrl-0 = <&pinctrl_usdhc1>;
	pinctrl-1 = <&pinctrl_usdhc1_100mhz>;
	pinctrl-2 = <&pinctrl_usdhc1_200mhz>;
	bus-width = <8>;
	non-removable;
	status = "okay";
};


